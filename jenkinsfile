pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
            echo 'Building..'
                sh 'mvn clean package'
            }
        }
        stage('test') {
            steps {
            echo 'Building..'
                sh 'mvn test'
            }
        }
        stage('deploy') {
            steps {
            echo 'Deploying....' 
            sshagent(['deploy']) { 
                sh "scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/jenkins-ci-cd project/target/webapp-0.2.war centos@54.161.252.210:/home/centos/apache-tomcat-10.0.27/webapps"
                 }
            }
        }
    }
}
